<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="F_BottomSheet_RelativeView">

        <item name="android:gravity">top</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">true</item>
        <item name="layout_behavior">android.support.design.widget.BottomSheetBehavior</item>
        <!--<item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>-->
    </style>


    <style name="renew_life">
        <item name="android:textSize">10.5sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="remain_life">
        <item name="android:textSize">15.5sp</item>
        <item name="android:shadowColor">@color/primary_dark</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">#b7b7b7</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">5.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle5">
        <item name="android:textSize">5.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle7">
        <item name="android:textSize">5.5sp</item>
        <item name="android:lineSpacingExtra">2.5sp</item>
        <item name="android:textColor">#2b2b2b</item>
    </style>

    <style name="TextStyle6">
        <item name="android:textSize">5.5sp</item>
        <item name="android:lineSpacingExtra">3.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="match_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="cards" parent="match_wrap_parent">
        <!--<item name="android:theme">@style/match_wrap_parent</item>-->
        <item name="cardCornerRadius">@dimen/cards</item>
        <item name="elevation">20dp</item>
        <item name="android:shadowColor">@color/primary_dark</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
