<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="F_BottomSheet_RelativeView" >

        <item name="android:gravity">top</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">true</item>
        <item name="layout_behavior">android.support.design.widget.BottomSheetBehavior</item>
        <!--<item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>-->
    </style>


    <resources>
        <style name="TextStyle2">
            <item name="android:textSize">15.5sp</item>
            <item name="android:letterSpacing">0.03</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="TextStyle">
            <item name="android:textSize">15.5sp</item>
            <item name="android:letterSpacing">0.03</item>
            <item name="android:textColor">#b7b7b7</item>
        </style>
        <style name="TextStyle4">
            <item name="android:textSize">5.5sp</item>
            <item name="android:letterSpacing">0.09</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="TextStyle5">
            <item name="android:textSize">5.5sp</item>
            <item name="android:letterSpacing">0.03</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="TextStyle3">
            <item name="android:textSize">5.5sp</item>
            <item name="android:fontFamily">monospace</item>
            <item name="android:textStyle">normal</item>
            <item name="android:letterSpacing">0.03</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="TextStyle7">
            <item name="android:textSize">5.5sp</item>
            <item name="android:letterSpacing">0.11</item>
            <item name="android:lineSpacingExtra">2.5sp</item>
            <item name="android:textColor">#2b2b2b</item>
        </style>
        <style name="TextStyle6">
            <item name="android:textSize">5.5sp</item>
            <item name="android:letterSpacing">0.11</item>
            <item name="android:lineSpacingExtra">3.5sp</item>
            <item name="android:textColor">@color/white</item>
        </style>
    </resources>

</resources>
